<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calcounter">

    <uses-permission android:name = "android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalCounter">
        <activity
            android:name="com.gachon.mp_termproject.Activity.MealActivity"
            android:exported="true" android:theme="@style/Theme.CalCounter.NoActionBar" />
        <activity
            android:name="com.gachon.mp_termproject.Activity.CalendarActivity"
            android:exported="true" android:theme="@style/Theme.CalCounter.NoActionBar" />
        <activity
            android:name="com.gachon.mp_termproject.Activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CalCounter.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gachon.mp_termproject.Activity.FoodItemDetailsActivity"
            android:label="@string/title_activity_foof_item_details"
            android:theme="@style/Theme.CalCounter.NoActionBar" />
        <activity
            android:name="com.gachon.mp_termproject.Activity.DisplayFoodsActivity"
            android:label="@string/title_activity_display_foods"
            android:theme="@style/Theme.CalCounter.NoActionBar" />
        <activity
            android:name="com.gachon.mp_termproject.Activity.CalculatorActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CalCounter.NoActionBar" />
    </application>

</manifest>